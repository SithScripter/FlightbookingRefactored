<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression Suite" parallel="tests" thread-count="2" preserve-order="true" configfailurepolicy="continue">
    <test name="UI Tests" parallel="classes" thread-count="1">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.demo.flightbooking.tests.booking.EndToEndBookingTest"/>
            <class name="com.demo.flightbooking.tests.booking.PurchaseFormValidationTest"/>
        </classes>
    </test>

    <test name="API Tests" parallel="classes" thread-count="1">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.demo.flightbooking.tests.api.SampleApiTest"/>
        </classes>
    </test>
</suite>
