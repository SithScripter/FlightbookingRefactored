<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite" parallel="tests" thread-count="2" preserve-order="true" configfailurepolicy="continue">
	<listeners>
		<listener class-name="com.demo.flightbooking.listeners.TestListener"/>
	</listeners>

	<parameter name="test.suite" value="smoke"/>

	<test name="Smoke-Chrome" parallel="classes" thread-count="1">
		<parameter name="browser" value="chrome"/>
		<groups>
			<run><include name="smoke"/></run>
		</groups>
		<classes>
			<class name="com.demo.flightbooking.tests.booking.EndToEndBookingTest"/>
		</classes>
	</test>

	<test name="Smoke-Firefox" parallel="classes" thread-count="1">
		<parameter name="browser" value="firefox"/>
		<groups>
			<run><include name="smoke"/></run>
		</groups>
		<classes>
			<class name="com.demo.flightbooking.tests.booking.EndToEndBookingTest"/>
		</classes>
	</test>
</suite>